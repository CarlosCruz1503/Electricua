<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Importancia de cuidar la energía"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scrollbarSize="8dp"
            android:shadowDy="20"
            android:text="Al ahorrar energía contribuimos a interrumpir un ciclo de contaminación del medioambiente que ocurre de la siguiente manera: al usar menos energía usamos menos combustibles que generan dicha energía, al utilizar menos combustible, disminuye la emisión de gases a la atmósfera, al haber menos gases, se contamina menos."
            android:textSize="20sp"
            tools:layout_editor_absoluteY="112dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>